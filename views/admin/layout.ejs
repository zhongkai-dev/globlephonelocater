<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Phone Locator Bot Admin</title>
    
    <!-- Fonts and Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    
    <!-- CSS Files -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/assets/css/admin.css">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo-header">
                <a href="/admin/dashboard" class="logo">
                    Phone Locator
                </a>
            </div>
            
            <!-- Sidebar navigation -->
            <ul class="nav">
                <li class="nav-item <%= activePage === 'dashboard' ? 'active' : '' %>">
                    <a href="/admin/dashboard" class="nav-link">
                        <i class="fas fa-home"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="nav-item <%= activePage === 'users' ? 'active' : '' %>">
                    <a href="/admin/users" class="nav-link">
                        <i class="fas fa-users"></i>
                        <p>User Management</p>
                    </a>
                </li>
                <li class="nav-item <%= activePage === 'proxies' ? 'active' : '' %>">
                    <a href="/admin/proxies" class="nav-link">
                        <i class="fas fa-server"></i>
                        <p>Proxy Management</p>
                    </a>
                </li>
                <li class="nav-item <%= activePage === 'api-keys' ? 'active' : '' %>">
                    <a href="/admin/api-keys" class="nav-link">
                        <i class="fas fa-key"></i>
                        <p>API Keys</p>
                    </a>
                </li>
                <li class="nav-item <%= activePage === 'history' ? 'active' : '' %>">
                    <a href="/admin/history" class="nav-link">
                        <i class="fas fa-history"></i>
                        <p>Lookup History</p>
                    </a>
                </li>
                <li class="nav-item <%= activePage === 'statistics' ? 'active' : '' %>">
                    <a href="/admin/statistics" class="nav-link">
                        <i class="fas fa-chart-bar"></i>
                        <p>Statistics</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/logout" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <p>Logout</p>
                    </a>
                </li>
            </ul>
        </div>
        
        <!-- Main Panel -->
        <div class="main-panel">
            <!-- Top Navigation -->
            <div class="main-header">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggler d-block d-lg-none toggle-sidebar" data-toggle="collapse">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h4 class="mb-0 ml-3"><%= title %></h4>
                    <div class="ml-auto">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <span class="text-muted">Admin Panel</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <!-- Notifications area -->
            <div id="notifications"></div>
            
            <!-- Content -->
            <div class="content">
                <div class="page-inner">
                    <%- body %>
                </div>
            </div>
            
            <!-- Footer -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <a href="https://github.com/zhongkai-dev/phone-location-bot" target="_blank">
                                <i class="fab fa-github"></i> GitHub
                            </a>
                        </div>
                        <div class="col-md-6 text-right">
                            <span>Phone Locator Bot Admin &copy; <%= new Date().getFullYear() %></span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    
    <!-- Core JS Files -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script src="/assets/js/atlantis.min.js"></script>
    
    <!-- Custom Scripts -->
    <script>
        $(document).ready(function() {
            // Initialize DataTables
            if ($('.table').length > 0 && !$('.table').hasClass('dataTable')) {
                $('.table').DataTable({
                    responsive: true,
                    language: {
                        search: "_INPUT_",
                        searchPlaceholder: "Search records"
                    }
                });
            }
            
            // Initialize tooltips and popovers
            $('[data-toggle="tooltip"]').tooltip();
            $('[data-toggle="popover"]').popover();
            
            // Handle flash messages
            setTimeout(function() {
                $('.alert-dismissible').fadeOut('slow');
            }, 3000);
            
            // Toggle sidebar on mobile
            $('.toggle-sidebar').click(function() {
                $('.sidebar').toggleClass('show');
            });
            
            // Force sidebar to be visible on desktop
            if ($(window).width() >= 992) {
                $('.sidebar').css('display', 'block');
                $('.sidebar').css('left', '0');
            }
        });
    </script>
</body>
</html> 